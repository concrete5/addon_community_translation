<?xml version="1.0" encoding="UTF-8"?>
<schema
    xmlns="http://www.concrete5.org/doctrine-xml/0.5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd"
>

    <table name="CommunityTranslationGeneratedApiTokens" comment="List of API tokens ever generated">
        <field name="token" type="string" size="32" comment="API token">
            <key/>
            <fixed/>
        </field>
    </table>

    <table name="CommunityTranslationIPControl" comment="IP-based access control">
    	<field name="type" type="string" size="10" comment="Type of access">
    		<key/>
    		<notnull/>
    	</field>
        <field name="ip" type="string" size="39" comment="IP Address">
        	<key/>
        	<notnull/>
        </field>
        <field name="dateTime" type="datetime" comment="Date/time of the IP visit">
        	<key/>
        	<notnull/>
        </field>
        <field name="count" type="integer" comment="Number of visit in the datetime instance)">
    		<unsigned/>
    		<notnull/>
        </field>
    </table>

</schema>
